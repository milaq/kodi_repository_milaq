<?xml version=1.0 encoding=UTF-8 standalone=yes?>
<addons>
<addon id="repository.milaq" name="milaq's Kodi addons" version="2.0.0" provider-name="milaq">
    <extension point="xbmc.addon.repository" name="milaq's Kodi addons">
        <dir>
            <info>https://github.com/milaq/kodi_repository_milaq/raw/matrix/addons.xml</info>
            <checksum>https://github.com/milaq/kodi_repository_milaq/raw/matrix/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/milaq/kodi_repository_milaq/raw/matrix/pool</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>milaq's Kodi addons</summary>
        <description>milaq's Kodi addon repository</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
<addon 
    id="service.blackbarsremover"
    name="Black Bars Remover"
    version="3.0.0"
    provider-name="milaq">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_gb">Automatically fit video to screen</summary>
        <description lang="en_gb">Automatically adjusts the zoomlevel to eliminate black bars in videos. This addon also respects Kodi's "minimise black bars" setting.</description>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
        <forum></forum>
        <website>https://milaq.net</website>
        <email></email>
        <source>https://github.com/milaq/kodi_addon_blackbarsremover</source>
        <news></news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart></fanart>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>
<addon id="resource.uisounds.nebula.mlq" version="1.0.0" name="Nebula UI Sounds (MLQ)" provider-name="milaq">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
  </requires>
  <extension point="kodi.resource.uisounds"/>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Nebula GUI sounds (MLQ)</summary>
    <description lang="en">Nebula GUI sounds (MLQ modded version)</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
